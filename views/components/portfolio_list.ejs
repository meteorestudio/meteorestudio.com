<section class="container-fluid px-0">
  <ul class="list-unstyled row no-gutters mb-0">
    <% portfolio.forEach(function(portfolioItem) { %>
      <li class="col-12 col-md-6 col-lg-3">
        <figure>
          <img src="assets/<%= portfolioItem.image %>" class="img-fluid" />
          <figcaption>
            <div class="figcaption-content text-center px-5">
              <h5><%= portfolioItem.title %></h5>
              <ul class="list-inline text-center">
                <% portfolioItem.services.forEach(function(portfolioItemService) {%>
                  <li class="list-inline-item text-uppercase small portfolio-list-item"><%= portfolioItemService %></li>
                <% }); %>
              </ul>
              
            </div>
          </figcaption>
        </figure>
      </li>
    <% }); %>
  </ul>
</section>